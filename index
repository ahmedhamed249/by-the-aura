        // Initialize Firebase
        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);

        // Handle Form Submission
        const form = document.getElementById('emailForm');
        const btn = document.getElementById('submitBtn');
        const loadingMsg = document.getElementById('loadingMsg');

        form.addEventListener('submit', async (e) => {
            e.preventDefault(); 

            const name = document.getElementById('name').value;
            const email = document.getElementById('email').value;

            // 1. UI Feedback: Turn Green and Pulse
            btn.classList.add('success');
            btn.innerHTML = "ACCESS GRANTED âœ“";
            loadingMsg.style.display = "block";

            try {
                // 2. Send data to Firebase
                await addDoc(collection(db, "leads"), {
                    name: name,
                    email: email,
                    downloadedAt: serverTimestamp(),
                    source: "By The Aura Web Funnel"
                });

                // 3. Redirect to PDF
                // Checks if you have added the link yet
                if(PDF_URL === "INSERT_YOUR_PDF_LINK_HERE") {
                    alert("The PDF link is being updated. Please check back later!");
                    console.log("Owner: Please update the PDF_URL variable in the code.");
                } else {
                    setTimeout(() => {
                        window.location.href = PDF_URL;
                    }, 1500);
                }

            } catch (error) {
                console.error("Error adding document: ", error);
                btn.classList.remove('success');
                btn.innerHTML = "Error. Try again.";
                alert("Something went wrong. Please check your internet connection.");
            }
        });
